extends item

block content
  composition
    name= name
    artist
      a(href=artist.url)= artist.name
    picture
      img(src=pictureUrl)
    description= description
    medium= medium
    price= price
    if buyer
      buyer
        a(href=buyer.url)= buyer.name
    dimensions= dimensions
    category= category
    scroll
      if previousFromArtist
        a(href=previousFromArtist) previous from artist
      if nextFromArtist
        a(href=nextFromArtist) next from artist
      if previousHot
        a(href=previousHot) previous hot
      if nextHot
        a(href=nextHot) next hot
    update
      a(href=updateUrl) update
    add-art
      a(href=addCompositionUrl) add composition
